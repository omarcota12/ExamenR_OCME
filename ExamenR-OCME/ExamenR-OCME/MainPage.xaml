<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenR_OCME.MainPage"
               xmlns:local="clr-namespace:ExamenR_OCME"
            Title="Monitor de Frecuencia Cardíaca" Height="350" Width="525">

    <ContentPage.BindingContext>
        <local:MainPage/>
    </ContentPage.BindingContext>

    <Grid>
        <StackLayout>
            <Label Text="Ingrese los latidos por 15 segundos (separados por coma):" Margin="0,0,0,20"/>
            <BoxView x:Name="{Binding InputText}" Width="200" Margin="0,0,0,20"/>
            <Button x:Name="Calcular Frecuencia" Width="150" Command="{Binding CalculateCommand}"/>
            <Label Text="{Binding StatusMessage}" Margin="0,20,0,0" FontAttributes="Bold"/>
        </StackLayout>
    </Grid>
   
</ContentPage>
